<div class="graphic-inner component-inner" role="region" aria-label="{{_globals._components._graphic.ariaRegion}}">
    {{> component this}}
    <div class="graphic-widget component-widget{{#if _showAttribution}} graphic-widget-attribution{{/if}}">
        <img src="{{_graphic.src}}" alt="{{_graphic.alt}}" data-large="{{_graphic.large}}" data-small="{{_graphic.small}}"/>
    </div>
    {{#if _showAttribution}}
        <div class="graphic-attribution">{{{_graphic.attribution}}}</div>
    {{/if}}    
</div>
